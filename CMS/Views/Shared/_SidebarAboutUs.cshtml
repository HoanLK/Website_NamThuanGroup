@model string

<aside class="sidebar col-md-3 col-lg-3 order-2 order-md-1">
    <ul class="list list-group sidebar-about" style="margin: 30px auto">
        @helper li(string link, string title, bool isAcive = false)
        {
            string active = @isAcive == true ? "active" : "";

            <li class="list-group-item d-flex justify-content-between align-items-center @active ">
                <a href="@link" title="@Html.Raw(title)">@Html.Raw(title)</a>
            </li>
        }
        @li("/about-us", Resources.AboutUs, Model == "AboutUs")
        @li("/about-us/development-history", Resources.DevelopmentHistory, Model == "DevelopmentHistory")
        @li("/about-us/development-strategy", Resources.DevelopmentStrategy, Model == "DevelopmentStrategy")
        @li("/about-us/corporate-governance", Resources.CorporateGovernance, Model == "CorporateGovernance")
        @li("/about-us/subordinate-units", Resources.SubordinateUnits, Model == "SubordinateUnits")
    </ul>
</aside>