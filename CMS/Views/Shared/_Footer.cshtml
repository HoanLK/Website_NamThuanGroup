@using CMS.Models.ViewModels
@model FooterViewModel

<footer id="footer"
        class="footer-hover-links-light mt-0"
        data-plugin-image-background
        data-plugin-options="{'imageUrl': '/Content/Frontend/img/footer/background-1.png', 'bgPosition': 'center 100%'}">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 mb-4 mb-lg-0">
                <a href="/" class="logo">
                    <img alt="@Html.Raw(Resources.CompanyName)"
                         loading="lazy"
                         title="@Html.Raw(Resources.CompanyName)"
                         class="img-fluid mb-3"
                         src="~/Content/Frontend/img/logo-footer.png" />
                </a>
                <h4 class="text-uppercase" style="padding: 10px 0px;">@Html.Raw(Resources.CompanyName)</h4>
                <ul class="list list-icon list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <span class="text-color-light">@Html.Raw(Resources.Address):</span>
                        <a style="color: #c1c1c1 !important;">@Html.Raw(Resources.CompanyAddress)</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <span class="text-color-light">@Html.Raw(Resources.PhoneNumber):</span>
                        <a href="tel:@Html.Raw(Resources.CompanyPhoneNumber)" title="@Html.Raw(Resources.CompanyPhoneNumber)">@Html.Raw(Resources.CompanyPhoneNumber)</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <span class="text-color-light">Email:</span>
                        <a href="mailto:@Html.Raw(Resources.CompanyEmail)" title="@Html.Raw(Resources.CompanyEmail)" class="link-underline-light">@Html.Raw(Resources.CompanyEmail)</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-3 mb-4 mb-lg-0">
                <h2 class="text-3 mb-3 text-uppercase">@Html.Raw(Resources.LinkPage)</h2>
                <ul class="list list-icon list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <a href="/about-us" title="@Html.Raw(Resources.MenuHome)">@Html.Raw(Resources.MenuHome)</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <a href="/product-categories" title="@Html.Raw(@Resources.MenuProduct)">@Html.Raw(@Resources.MenuProduct)</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <a href="/csr" title="CSR">CSR</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <a href="/certificates" title="@Html.Raw(@Resources.Certificate)">@Html.Raw(@Resources.Certificate)</a>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-angle-right mr-2 ml-1"></i>
                        <a href="/contact" title="@Html.Raw(@Resources.Contact)">@Html.Raw(@Resources.Contact)</a>
                    </li>
                </ul>
            </div>
            @if (Model.Categories != null)
            {
                <div class="col-lg-3">
                    <h2 class="text-3 mb-3 text-uppercase">@Html.Raw(Resources.Product)</h2>
                    <ul class="list list-icon list-unstyled">
                        @foreach (var category in Model.Categories)
                        {
                            <li class="mb-2">
                                <i class="fas fa-angle-right mr-2 ml-1"></i>
                                <a href="/product-categories/@category.Id" title="@Html.Raw(category.Name)">@Html.Raw(category.Name)</a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div class="row text-center text-md-left align-items-center">
                <div class="col-md-7 col-lg-8">
                    <ul class="social-icons social-icons-transparent social-icons-icon-light social-icons-lg">
                        <li class="social-icons-facebook">
                            <a href="https://www.facebook.com/namthuan.vn"
                               target="_blank"
                               title="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li class="social-icons-twitter">
                            <a href="http://www.twitter.com/"
                               target="_blank"
                               title="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="social-icons-instagram">
                            <a href="http://www.instagram.com/"
                               target="_blank"
                               title="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-5 col-lg-4">
                    <p class="text-md-right pb-0 mb-0" style="color: #fff;">
                        Copyrights © 2020. All Rights Reserved by Nam Thuan Group
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>